{% extends "base_login.html.twig" %}
{% block title %}Accès reservé !
{% endblock %}
{% block body %}
	<body class="hold-transition login-page">
		<div class="login-box">
			<div class="login-logo">
				<a href="">
					<i class="fa fa-lock"></i>
					<b>SCOOP
					</b>SOLIDAIRE
				</a>
			</div>
			<!-- /.login-logo -->
			<div class="login-box-body">
				<p class="login-box-msg">Accès reservé aux administrateurs</p>

				<form action="{{path('admin_account_login')}}" method="post">
					<div class="form-group has-feedback">
						<input type="email" name="_username" id="email" class="form-control" placeholder="Email" required>
						<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
					</div>
					<div class="form-group has-feedback">
						<input type="password" name="_password" class="form-control" placeholder="Password" required>
						<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					</div>
					<div
						class="row">
						<!-- /.col -->
						<div class="col-xs-4">
							<input type="hidden" name="_target_path" value="/admin"/>
							<button type="submit" class="btn btn-primary btn-block btn-flat">Connexion
							</button>
						</div>
						<!-- /.col -->
					</div>
				</form>

				<a href="#">mot de passe oublié ?</a>

			</div>
			<!-- /.login-box-body -->
		</div>
		<!-- /.login-box -->
	</body>
{% endblock %}
