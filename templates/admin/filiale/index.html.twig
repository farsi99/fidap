{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des filiales
{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {% include "admin/partials/sous-header.html.twig" with {'page': 'Pages'} %}

        <!-- Main content -->
        <section
            class="content">
            <!-- /.row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header box-tabl">
                            <h3 class="box-title">Gestion des filiales</h3>

                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <a href="{{path('admin_filiale_ajout')}}" class="btn btn-primary">
                                        <i class="fa fa-plus"></i>
                                        Ajouter une filiale</a>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Adresse complet</th>
                                    <th>Pays</th>
                                    <th></th>
                                </tr>
                                {% for filiale in filiales %}
                                    <tr>
                                        <td>{{filiale.id}}</td>
                                        <td>{{filiale.nom}}</td>
                                        <td>{{filiale.adresses}}</td>
                                        <td>{{filiale.pays}}</td>
                                        <td>
                                            <a href="{{path('admin_filiale_edit',{'id':filiale.id})}}" class="btn btn-info" title="modifier">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="{{path('admin_filiale_delete',{'id': filiale.id})}}" class="btn btn-danger" title="Supprimer">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
