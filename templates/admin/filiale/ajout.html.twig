{% extends "admin/base.html.twig" %}

{% block title %}Ajout d'une filiale
{% endblock %}

{% block body %}

    <div
        class="content-wrapper">
        <!-- Content Header (Page header) -->
        {% include "admin/partials/sous-header.html.twig" with {'page': 'Ajouter une filiale'} %}
        <!-- Main content -->
        <section class="content">
            <div class="row">

                {{form_start(form)}}

                <!-- /.col (left) -->
                <div class="col-md-8">
                    <div class="box box-primary">
                        <div
                            class="box-body">
                            <!-- Date -->
                            <div class="form-group">
                                {{form_label(form.nom)}}
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </div>
                                    {{form_widget(form.nom,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                {% if form_errors(form.nom) %}
                                    <div class="alert alert-danger small">
                                        {{form_errors(form.nom)}}
                                    </div>
                                {% endif %}
                                <!-- /.input group -->
                            </div>
                            <div class="form-group">
                                {{form_label(form.pays)}}
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-map"></i>
                                    </div>
                                    {{form_widget(form.pays,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                <!-- /.input group -->
                            </div>

                            <div class="form-group">
                                {{form_label(form.adresse)}}
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-map-marker"></i>
                                    </div>
                                    {{form_widget(form.adresse,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                <!-- /.input group -->
                            </div>
                            <!-- /.form group -->
                            <div class="form-group">
                                {{form_label(form.code_postal)}}
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-flag"></i>
                                    </div>
                                    {{form_widget(form.code_postal,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                <!-- /.input group -->
                            </div>
                            <!-- /.form group -->
                            <!-- Date and time range -->
                            <div class="form-group">
                                {{form_label(form.ville)}}
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-home"></i>
                                    </div>
                                    {{form_widget(form.ville,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                <!-- /.input group -->
                            </div>
                            <!-- /.form group -->

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.col (right) -->
                <div
                    class="col-md-4">

                    <!-- /bloc chargment d'image -->
                    <div class="box box-danger">
                        <div class="box-header">
                            <h3 class="box-title">Image Ã  la une</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-photo"></i>
                                    </div>
                                    {{form_widget(form.image,{'attr':{'class':'form-control pull-left'}})}}

                                </div>
                                <!-- /.input group -->
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>

                <div class="col-md-12">
                    <div
                        class="box box-info">

                        <!-- /.box-header -->
                        <div class="box-header">
                            <h3 class="box-title">Description</h3>
                            <!-- tools box -->
                            <div class="pull-right box-tools"></div>
                            <!-- /. tools -->
                        </div>
                        <div class="box-body pad">
                            {{form_widget(form.description,{'attr':{'rows':'20','cols':'180','class':'hauteur'}})}}
                            {% if form_errors(form.description) %}
                                <div class="alert alert-danger small">
                                    {{form_widget(form.description)}}
                                </div>
                            {% endif %}
                        </div>


                        <div class="box-body">
                            <input type="hidden" name="verif" value="">
                            <div class="col-xs-12 col-sm-12 no_padding">
                                <input type="submit" value="Enregistrer la page" class="btn btn-info" style="padding:10px; margin-bottom:5px;">
                            </div>
                        </div>

                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.col-->
                {{form_end(form)}}
            </div>
            <!-- ./row -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('filiale_description')
            // bootstrap WYSIHTML5 - text editor
            $('.textarea').wysihtml5()
        })
    </script>
{% endblock %}
