{% extends "admin/base.html.twig" %}
{% block title %}Gestion des slider
{% endblock %}
{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {% include "admin/partials/sous-header.html.twig" with {'page': 'Slider'} %}

        <!-- Main content -->
        <section
            class="content">
            <!-- /.row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header box-tabl">
                            <h3 class="box-title">Gestion des sliders</h3>

                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <a href="{{path('admin_slider_ajout')}}" class="btn btn-primary">
                                        <i class="fa fa-plus"></i>
                                        Ajouter un slide</a>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>resume</th>
                                    <th>Image</th>
                                    <th></th>
                                </tr>
                                {% for slider in sliders %}
                                    <tr>
                                        <td>{{slider.id}}</td>
                                        <td>{{slider.titre}}</td>
                                        <td>{{slider.resume}}</td>
                                        <td><img src="/images/bg/{{slider.image}}" width="80">
                                        </td>

                                        <td>
                                            <a href="{{path('admin_slider_edit',{'id':slider.id})}}" class="btn btn-info" title="modifier">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="{{path('admin_slider_delete',{'id':slider.id})}}" class="btn btn-danger" title="Supprimer">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
