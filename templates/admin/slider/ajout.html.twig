{% extends "admin/base.html.twig" %}

{% block title %}Ajout d'un slider
{% endblock %}

{% block body %}

    <div
        class="content-wrapper">
        <!-- Content Header (Page header) -->
        {% include "admin/partials/sous-header.html.twig" with {'page': 'Ajouter'} %}
        <!-- Main content -->
        <section class="content">
            <div class="row">

                {{form_start(form)}}
                <input type="hidden" name="id_type" value="2">
                <input
                type="hidden" name="id" value="">

                <!-- /.col (left) -->
                <div class="col-md-8">
                    <div class="box box-primary">
                        <div
                            class="box-body">
                            <!-- Date -->
                            <div class="form-group">
                                {{form_label(form.titre)}}
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </div>
                                    {{form_widget(form.titre,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                {% if form_errors(form.titre) %}
                                    <div class="alert alert-danger small">
                                        {{form_errors(form.titre)}}
                                    </div>
                                {% endif %}
                                <!-- /.input group -->
                            </div>
                            <div class="form-group">
                                Resumé
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-file"></i>
                                    </div>
                                    {{form_widget(form.resume,{'attr':{'class':'form-control pull-right'}})}}
                                </div>
                                <!-- /.input group -->
                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col (right) -->
                <div
                    class="col-md-4">

                    <!-- /bloc chargment d'image -->
                    <div class="box box-danger">
                        <div class="box-header">
                            <h3 class="box-title">Image à la une</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-photo"></i>
                                    </div>
                                    {{form_widget(form.imageFile,{'attr':{'class':'form-control pull-left'}})}}

                                </div>
                                <!-- /.input group -->
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
                <div class="box-body">
                    <input type="hidden" name="verif" value="">
                    <div class="col-xs-12 col-sm-12 no_padding">
                        <input type="submit" value="Enregistrer la page" class="btn btn-info" style="padding:10px; margin-bottom:5px;">
                    </div>
                </div>
                <!-- /.col-->
                {{form_end(form)}}
            </div>
            <!-- ./row -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
