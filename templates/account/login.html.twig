{% extends 'base.html.twig' %}

{% block title %}Connexion dans votre espace
{% endblock %}

{% block body %}
	<body>
		<div
			id="wrapper" class="clearfix">
			<!-- Start main-content -->
			<div
				class="main-content">
				<!-- Section: inner-header -->

				<div class="row">
					<div class="col-md-12">
						{% for key, messages in app.flashes %}
							<div class="alert alert-{{key}}">
								{% for message in messages %}
									<p>{{message|raw}}</p>
								{% endfor %}
							</div>
						{% endfor %}
					</div>
				</div>
				<!-- Divider: Contact -->
				<section class="divider">
					<div class="container">
						<div class="row pt-30">
							<div class="col-md-4"></div>
							<div class="col-md-4">
								<h3 class="line-bottom mt-0 mb-20">
									<i class="fa fa-lock"></i>
									Accès a votre espace</h3>
								<!-- Contact Form -->
								<form action="{{path('account_login')}}" method="post">
									{% if error %}
										<div class="form-group has-feedback">
											<span class="alert alert-error">Login ou mot de passe incorrecte</span>
										</div>
									{% endif %}
									<div class="form-group has-feedback">
										<input type="email" name="_username" id="email" class="form-control" placeholder="Email" required>
										<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
									</div>
									<div class="form-group has-feedback">
										<input type="password" name="_password" class="form-control" placeholder="Password" required>
										<span class="glyphicon glyphicon-lock form-control-feedback"></span>
									</div>
									<div
										class="row">
										<!-- /.col -->
										<input type="hidden" name="_target_path" value="/compte/profil"/>
										<div class="col-xs-4 pt-btn">
											<input name="form_botcheck" class="form-control" type="hidden" value=""/>
											<button type="submit" class="btn btn-flat btn-theme-colored text-uppercase mt-10 mb-sm-30 border-left-theme-color-2-4px" data-loading-text="Please wait...">Connexion</button>
										</div>
										<div class="col-xs-2"></div>
										<div class="col-xs-6">
											<a href="{{path('account_forgot_passwword')}}">Mot de passe oublié ?</a>
										</div>
										<!-- /.col -->
									</div>


								</form>

							</div>
							<div class="col-md-4"></div>
						</div>
					</div>
				</section>
			</div>
			<!-- end main-content -->


		{% endblock %}
